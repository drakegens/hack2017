extends ../layout

block content
  h1 Create New Registry
  p.lead Add items to your Registry
  form.form-horizontal(action='/registry/new', method='POST', id='regForm')
    input(type='hidden', name='_csrf', value=_csrf)
    div#listOfItems
      .registry-item
        .form-group
          label.col-sm-3.control-label(for='nameOfItem[]') Item Name
          .col-sm-7
            input.form-control(type='text', name='nameOfItem[]', id='nameOfItem')
        .form-group
          label.col-sm-3.control-label(for='itemPrice[]') Price
          .col-sm-7
            .input-group
              .input-group-addon
                | $
              input.form-control(type='number', name='itemPrice[]', id='itemPrice')
        .form-group
          label.col-sm-3.control-label(for='itemDescription[]') Description
          .col-sm-7
            input.form-control(type='text', name='itemDescription[]', id='itemDescription')
        .form-group
          label.col-sm-3.control-label(for='itemURL[]') Item URL (Optional)
          .col-sm-7
            input.form-control(type='text', name='itemURL[]', id='itemURL')
    .form-group
      .col-sm-offset-8.col-sm-2
        a.pull-right(id='a', href='javascript:void(0)')
          i.fa.fa-plus
          | Add Another Item
    .form-group
      .col-sm-offset-8.col-sm-2
        button.pull-right.btn.btn-primary(type='submit')
          | Submit Registry
